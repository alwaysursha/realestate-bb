{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["sin1"],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/admin", "destination": "/admin.html" },
    { "source": "/admin/", "destination": "/admin.html" },
    { "source": "/admin/dashboard", "destination": "/admin.html" },
    { "source": "/admin/dashboard/", "destination": "/admin.html" },
    { "source": "/admin/properties", "destination": "/admin.html" },
    { "source": "/admin/properties/", "destination": "/admin.html" },
    { "source": "/admin/developers", "destination": "/admin.html" },
    { "source": "/admin/developers/", "destination": "/admin.html" },
    { "source": "/admin/users", "destination": "/admin.html" },
    { "source": "/admin/users/", "destination": "/admin.html" },
    { "source": "/admin/agents", "destination": "/admin.html" },
    { "source": "/admin/agents/", "destination": "/admin.html" },
    { "source": "/admin/settings", "destination": "/admin.html" },
    { "source": "/admin/settings/", "destination": "/admin.html" },
    { "source": "/admin/login", "destination": "/admin.html" },
    { "source": "/admin/login/", "destination": "/admin.html" },
    { "source": "/admin/inquiries", "destination": "/admin.html" },
    { "source": "/admin/inquiries/", "destination": "/admin.html" },
    { "source": "/admin/(.*)", "destination": "/admin.html" }
  ]
} 